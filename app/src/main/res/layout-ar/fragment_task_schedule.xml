<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsTasks.TaskScheduleFragment">

    <!-- TODO: Update blank fragment_forums layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="50dp">
        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/btn_start_date"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/start_date_image"
                android:layout_width="15dp"
                android:text="@string/start_date"
                android:textAllCaps="false"
                android:background="@mipmap/calendar"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_height="15dp"

                />
            <TextView
                android:id="@+id/text1"
                android:layout_toRightOf="@+id/start_date_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:singleLine="true"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorBaseHeader"
                android:textSize="15sp"
                android:typeface="monospace" />
            <TextView
                android:id="@+id/start_date"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/text1"
                android:layout_width="wrap_content"
                android:text="@string/start_date"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/text1"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingRight="2dp"
                android:textColor="@color/colorBaseHeader"
                android:background="@drawable/round_border"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_end_date"
            >

            <ImageView
                android:id="@+id/end_date_image"
                android:layout_width="15dp"
                android:text="@string/start_date"
                android:textAllCaps="false"
                android:background="@mipmap/calendar"
                android:layout_gravity="center_vertical"
                android:layout_height="15dp"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/end_date"
                android:singleLine="true"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorBaseHeader"
                android:textSize="15sp"
                android:typeface="monospace" />
            <TextView
                android:id="@+id/end_date"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/text2"
                android:layout_width="wrap_content"
                android:text="@string/end_date"
                android:layout_alignLeft="@+id/end_date_image"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingRight="2dp"
                android:textColor="@color/colorBaseHeader"
                android:background="@drawable/round_border"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>