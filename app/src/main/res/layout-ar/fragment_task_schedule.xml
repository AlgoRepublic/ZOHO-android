<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".FragmentsTasks.TaskScheduleFragment">

    <!-- TODO: Update blank fragment_forums layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/btn_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/start_date_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/calendar"
                android:text="@string/start_date"
                android:textAllCaps="false"

                />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/start_date_image"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/start_date"
                android:textColor="@color/colorBaseHeader"
                android:textSize="10sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/text1"
                android:background="@drawable/round_border"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="@string/start_date"
                android:textColor="@color/colorBaseHeader"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/end_date_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="2dp"
                android:layout_toStartOf="@+id/text2"
                android:background="@drawable/calendar"
                android:text="@string/start_date"
                android:textAllCaps="false"

                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:layout_toStartOf="@+id/end_date"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/start_date"
                android:textColor="@color/colorBaseHeader"
                android:textSize="10dp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_border"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="@string/end_date"
                android:textColor="@color/colorBaseHeader"
                android:textSize="10sp" />

        </RelativeLayout>
    </LinearLayout>


</FrameLayout>
