<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBaseWrapper"
    android:gravity="top"
    android:orientation="vertical">

    <View
        android:id="@id/view"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/colorBaseHeader" />

    <RelativeLayout
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBaseHeader"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/settings"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/settings" />
    </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <RelativeLayout
                    android:id="@+id/parent_child2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/profile"
                        android:layout_toStartOf="@+id/profile"
                        android:gravity="right|end"
                        android:lines="2"
                        android:padding="5dp"
                        android:text="John Doe"
                        android:textColor="@color/colorBaseHeader"
                        android:textSize="18dp" />

                    <com.mikhaellopez.circularimageview.CircularImageView
                        app:civ_border="true"
                        app:civ_shadow="true"
                        app:civ_shadow_color="@color/colorBaseMenu"
                        app:civ_shadow_radius="3"
                        android:id="@+id/profile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/nav_user"
                        app:civ_border_color="@color/colorContentWrapper"
                        app:civ_border_width="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/profile"
                        android:layout_toRightOf="@id/profile"
                        android:gravity="left|start"
                        android:lines="2"
                        android:padding="5dp"
                        android:text="admin"
                        android:textColor="@color/colorBaseHeader"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/parent_child3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/parent_child2"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="admin@admin.com"
                        android:textColor="@color/colorBaseHeader"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>

            <GridView
                android:id="@+id/gridview_menu"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="3"
                android:orientation="vertical"
                android:padding="10dp"
                android:stretchMode="columnWidth"></GridView>
        </LinearLayout>
</LinearLayout>
