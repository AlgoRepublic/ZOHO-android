<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <com.mikhaellopez.circularimageview.CircularImageView
        app:civ_border="true"
        app:civ_border_color="@color/colorContentWrapper"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/colorBaseMenu"
        app:civ_shadow_radius="3"
        android:id="@+id/assignee_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/nav_user"
        app:civ_border_width="0dp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NT"
        android:id="@+id/user_name"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="@color/colorBaseHeader"
        android:textColorHint="@color/colorBaseMenu"
        android:layout_marginTop="2dp"
        />
</LinearLayout>
