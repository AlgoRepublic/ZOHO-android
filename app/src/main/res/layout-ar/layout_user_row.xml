<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <RelativeLayout
        android:id="@+id/layout123"
        android:layout_toRightOf="@+id/selected_project"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            android:id="@+id/shadow_item_container"
            android:layout_width="match_parent"
            style="@style/ms9_DefaultShadowStyle"
            android:layout_height="match_parent"
            app:ms9_affectsDisplayedPosition="true"
            app:ms9_shadowElevation="2dp"
            app:ms9_shadowTranslationZ="1dp"
            app:ms9_useAmbientShadow="true">

            <RelativeLayout
                android:id="@+id/top_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@color/colorBaseWrapper"
                android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drag_edge="left"
            app:clickToClose="true">
            <LinearLayout
                android:id="@+id/main"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/btEdit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@color/colorContentWrapper"
                    android:text="Edit"
                    />
                <TextView
                    android:id="@+id/btDelete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:text="Delete"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_toRightOf="@+id/rightarrow_layout"
                    android:id="@+id/parent1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/colorBaseWrapper"
                    android:padding="5dp">
                    <com.mikhaellopez.circularimageview.CircularImageView
                        app:civ_border="true"
                        app:civ_shadow="true"
                        app:civ_shadow_color="@color/colorBaseMenu"
                        app:civ_shadow_radius="3"
                        android:id="@+id/user_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/colorBaseHeader"
                        android:src="@drawable/nav_user_black" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/test_forum"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:textSize="14sp"
                        android:id="@+id/user_title"
                        android:layout_toEndOf="@+id/user_image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_email"
                        android:textSize="14sp"
                        android:text="daadadad"
                        android:layout_below="@+id/user_image"
                        android:layout_alignStart="@+id/user_title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_role"
                        android:textSize="14sp"
                        android:text="daadadad"
                        android:layout_below="@+id/user_email"
                        android:layout_alignStart="@+id/user_title" />
                    </RelativeLayout>
                <LinearLayout
                    android:id="@+id/rightarrow_layout"
                    android:layout_width="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#E2DBDB">

                    <ImageView
                        android:id="@+id/right_arrow_image"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_right"/>
                </LinearLayout>
                </RelativeLayout>
        </com.daimajia.swipe.SwipeLayout>
            </RelativeLayout>
            </RelativeLayout>
        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
        </RelativeLayout>
</RelativeLayout>