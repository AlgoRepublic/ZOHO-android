<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/comment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/layout_comment"
            android:text="@string/forums_title"
            android:textColor="@color/colorBaseHeader"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/layout_comment"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/notify_alert1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bubble_alert_black"
                android:gravity="center"
                android:singleLine="true"
                android:text="112"
                android:textColor="@color/colorBaseHeader"
                android:textSize="7dp" />

            <ImageView
                android:id="@+id/delete1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/forums" />
        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/comment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:padding="5dp"
        android:text="@string/forums_description"
        android:textColor="@color/colorContentWrapper"
        android:textSize="12sp" />
</RelativeLayout>