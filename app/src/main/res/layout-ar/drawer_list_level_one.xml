<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/roundable_corner"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/explist_indicator"
        android:gravity="center"
        android:padding="3dp"
        android:text="lksahdgiuasdsdsdsdsddsdsdsdsssdsdsddssds"
        android:textColor="@color/colorBaseHeader"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/explist_indicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/level_one_down" />
</RelativeLayout>


