<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/colorBaseWrapper"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/task_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/title_name"
        android:layout_gravity="top"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="true"
        android:background="?attr/task_desc_small"

        android:scaleType="fitXY" />

    <EditText
        android:id="@+id/title_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/task_image"
        android:layout_toEndOf="@+id/task_image"
        android:background="?attr/round_border"
        android:gravity="top"
        android:hint="@string/task_desc"
        android:padding="5dp"
        android:textColor="?attr/color_line"
        android:textColorHint="?attr/hint_color"
        android:textCursorDrawable="@null"
        android:textSize="25sp" />
</RelativeLayout>