<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/layout123"
        android:layout_toRightOf="@+id/selected_project"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            android:id="@+id/shadow_item_container"
            android:layout_width="match_parent"
            style="@style/ms9_DefaultShadowStyle"
            android:layout_height="match_parent"
            app:ms9_affectsDisplayedPosition="true"
            app:ms9_shadowElevation="2dp"
            app:ms9_shadowTranslationZ="1dp"
            app:ms9_useAmbientShadow="true">

            <RelativeLayout
                android:id="@+id/top_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@color/colorBaseWrapper"
                android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:clickToClose="true">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:orientation="horizontal"
                >
               <!-- <TextView
                    android:id="@+id/btEdit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@color/colorContentWrapper"
                    android:text="Edit"
                    />-->
                <TextView
                    android:id="@+id/btDelete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:text="Delete"
                    />
            </LinearLayout>

                <RelativeLayout
                    android:id="@+id/parent2"
                    android:background="@color/colorBaseWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/parent1"
                        android:layout_toLeftOf="@+id/rightarrow_layout"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:orientation="horizontal">

                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:civ_border="true"
                                app:civ_shadow="true"
                                app:civ_border_width="1dp"
                                app:civ_shadow_color="@color/colorBaseMenu"
                                android:src="?attr/nav_user"
                                android:id="@+id/comment_image" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/test_forum"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:textSize="25sp"
                                android:id="@+id/comment_title"
                                android:layout_alignTop="@+id/comment_image"
                                android:layout_toEndOf="@+id/comment_image" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/comment_description"
                                android:textSize="25sp"
                                android:lines="2"
                                android:layout_marginTop="5dp"
                                android:layout_below="@+id/comment_title"
                                android:text="@string/test_forum"
                                android:layout_alignStart="@+id/comment_title" />
                        </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/rightarrow_layout"
                        android:layout_width="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#E2DBDB">

                        <ImageView
                            android:id="@+id/right_arrow_image"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_margin="5dp"
                            android:background="?attr/circle_left"/>
                    </LinearLayout>
                </RelativeLayout>
        </com.daimajia.swipe.SwipeLayout>
            </RelativeLayout>
            </RelativeLayout>
        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
    </RelativeLayout>
</RelativeLayout>