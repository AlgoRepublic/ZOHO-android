<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout1"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
        android:id="@+id/shadow_item_container"
        android:layout_width="match_parent"
        style="@style/ms9_DefaultShadowStyle"
        android:layout_height="wrap_content"
        app:ms9_useAmbientShadow="true"
        app:ms9_affectsDisplayedPosition="true"
        app:ms9_shadowTranslationZ="2dp"
        app:ms9_shadowElevation="5dp">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorContentWrapper"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/lblListHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="@string/new_forum_post"
                android:gravity="center"
                android:textColor="@color/white" />
        </RelativeLayout>
    </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_margin="30dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="6dp"
        card_view:cardCornerRadius="6dp">
        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout2">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/comment_title"
                    android:textSize="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="20dp"
                    app:met_floatingLabel="normal"
                    app:met_singleLineEllipsis="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout2"
                android:id="@+id/layout3"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:id="@+id/category"
                    android:textSize="22sp"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/forum_list"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/category"
                    android:layout_height="75dp"
                    android:textSize="22sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout3"
                >
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/comment_description"
                    android:textSize="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:hint="@string/content"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:gravity="top|left"
                    android:layout_marginTop="15dp"
                    app:met_floatingLabel="normal" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
