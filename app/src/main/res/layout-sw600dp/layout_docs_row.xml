<RelativeLayout
    android:layout_height="180dp"
    android:layout_width="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingStart="20dp"
    android:paddingTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/layout123"
        android:layout_toRightOf="@+id/selected_project"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            android:id="@+id/shadow_item_container"
            android:layout_width="match_parent"
            style="@style/ms9_DefaultShadowStyle"
            android:layout_height="match_parent"
            app:ms9_affectsDisplayedPosition="true"
            app:ms9_shadowElevation="5dp"
            app:ms9_shadowTranslationZ="2dp"
            app:ms9_useAmbientShadow="true">

            <RelativeLayout
                android:id="@+id/top_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:background="@color/colorBaseWrapper"
                android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:clickToClose="true">
            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/btDelete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="26sp"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:text="Delete"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBaseWrapper"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/parent1"
                    android:background="@color/colorBaseWrapper"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/rightarrow_layout"
                    android:layout_width="match_parent">
                    <ImageView
                        android:id="@+id/doc_checkbox"
                        android:layout_width="90dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:layout_height="100dp"
                        android:button="@null"
                        android:layout_margin="20dp"
                        android:checked="false"
                        android:visibility="visible"
                        android:layout_centerVertical="true"
                        />
                    <!--<ImageView-->
                    <!--android:id="@+id/file_image"-->
                    <!--android:layout_width="45dp"-->
                    <!--android:scaleType="fitXY"-->
                    <!--android:adjustViewBounds="true"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:background="@drawable/ic_listview_word"-->
                    <!--android:layout_margin="10dp" >-->
                    <!--</ImageView>-->

                    <RelativeLayout
                        android:id="@+id/layout_tasktitle"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/doc_checkbox"
                        >
                        <TextView
                            android:id="@+id/file_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:text="@string/file"
                            android:singleLine="true"
                            android:layout_marginTop="6dp"
                            android:ellipsize="end"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            />
                        <RelativeLayout
                            android:id="@+id/layout2"
                            android:layout_marginTop="6dp"
                            android:layout_below="@+id/file_name"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent" >
                            <TextView
                                android:id="@+id/file_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:text="4:00 PM"
                                />
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/file_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        />

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/rightarrow_layout"
                    android:layout_width="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#E2DBDB">

                    <ImageView
                        android:id="@+id/right_arrow_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/circle_left"/>
                </LinearLayout>
            </RelativeLayout>
        </com.daimajia.swipe.SwipeLayout>
            </RelativeLayout>
            </RelativeLayout>
        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
    </RelativeLayout>
</RelativeLayout>