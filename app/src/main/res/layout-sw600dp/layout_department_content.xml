<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="horizontal">
<RelativeLayout
    android:id="@+id/layout123"
    android:layout_toRightOf="@+id/selected_project"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal">

    <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
        android:id="@+id/shadow_item_container"
        android:layout_width="match_parent"
        style="@style/ms9_DefaultShadowStyle"
        android:layout_height="match_parent"
        app:ms9_affectsDisplayedPosition="true"
        app:ms9_shadowElevation="5dp"
        app:ms9_shadowTranslationZ="2dp"
        app:ms9_useAmbientShadow="true">

        <RelativeLayout
            android:id="@+id/top_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorBaseWrapper"
            android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:clickToClose="true">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/btDelete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="26sp"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:text="Delete"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBaseWrapper"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_toLeftOf="@+id/rightarrow_layout"
                    android:id="@+id/parent1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <RelativeLayout
                        android:paddingTop="16dp"
                        android:id="@+id/layout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_toLeftOf="@+id/layout_tasks"
                            android:id="@+id/project_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@drawable/folder_black"
                            android:drawablePadding="10dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:drawableStart="@drawable/folder_black"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:text="@string/projects"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:id="@+id/layout_comment"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:id="@+id/milestone_alert"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/bubble_alert_black"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="112"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/delete1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:src="@drawable/milestone" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_users"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_toLeftOf="@+id/layout_comment"
                            android:layout_toStartOf="@id/layout_comment">

                            <TextView
                                android:id="@+id/users_alert"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/bubble_alert_black"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="1"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/delete2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:src="@drawable/nav_user" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_tasks"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:layout_toLeftOf="@+id/layout_users"
                            android:layout_toStartOf="@+id/layout_users">

                            <TextView
                                android:id="@+id/task_alert"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/bubble_alert_black"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="112"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/delete3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:src="@drawable/task_desc_small" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/layout1"
                        android:layout_margin="6dp"
                        android:background="@color/colorBaseHeader" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/view"
                        android:padding="6dp">

                        <TextView
                            android:id="@+id/project_desc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:lines="3"
                            android:text=""
                            android:ellipsize="end"
                            android:textSize="22sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/project_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/rightarrow_layout"
                    android:layout_width="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#E2DBDB">

                    <ImageView
                        android:id="@+id/right_arrow_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/circle_left"/>
                </LinearLayout>

            </RelativeLayout>

        </com.daimajia.swipe.SwipeLayout>
        </RelativeLayout>
        </RelativeLayout>
    </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
</RelativeLayout>
    </RelativeLayout>