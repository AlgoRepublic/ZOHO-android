<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    tools:context=".fragments.TaskDetailFragment"
    android:background="@color/colorBaseWrapper">
    <RelativeLayout
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms9_useAmbientShadow="true"
            app:ms9_affectsDisplayedPosition="true"
            app:ms9_shadowTranslationZ="2dp"
            app:ms9_shadowElevation="4dp">
            >
            <RelativeLayout
                android:id="@+id/layout_tasktitle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorContentWrapper">


                <View
                    android:id="@+id/priority_bar"
                    android:layout_width="8dp"
                    android:layout_marginRight="6dp"
                    android:layout_alignBottom="@+id/layout1"
                    android:layout_alignTop="@+id/layout1"
                    android:background="@drawable/roundable_prioritybar"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true">
                </View>
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/priority_bar"
                    android:src="@drawable/taskdetail_icon"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/task_name"
                    android:layout_width="fill_parent"
                    android:text="@string/task_name"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:layout_marginLeft="100dp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_height="2dp"/>
        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@+id/include"
        android:layout_above="@+id/parent2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/parent1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="60dp"
            android:layout_above="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/layout3"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/header_layout1"
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:text="@string/task_startdate"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_alignParentLeft="true"
                            />
                        <TextView
                            android:id="@+id/start_date"
                            android:layout_width="wrap_content"
                            android:text="dsds"
                            android:paddingLeft="10dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_toRightOf="@+id/text2"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/task_duedate"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_toLeftOf="@+id/end_date"

                            />
                        <TextView
                            android:id="@+id/end_date"
                            android:layout_width="wrap_content"
                            android:text="dsds"
                            android:paddingLeft="10dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_alignParentRight="true"
                            android:layout_toLeftOf="@+id/textView"

                            />

                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/header_layout2"
                        android:layout_below="@+id/header_layout1"
                        android:layout_width="match_parent"
                        android:layout_marginRight="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/category"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_toLeftOf="@+id/textView"

                            />
                        <TextView
                            android:id="@+id/category"
                            android:layout_width="wrap_content"
                            android:text="dsds"
                            android:paddingLeft="6dp"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_toLeftOf="@+id/textView"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/header_layout3"
                        android:layout_below="@+id/header_layout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/task_details"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_toLeftOf="@+id/textView"

                            />
                        <TextView
                            android:id="@+id/task_desc"
                            android:layout_width="match_parent"
                            android:layout_below="@+id/task_name"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:ellipsize="end"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/header_layout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/header_layout3"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/task_users"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_toLeftOf="@+id/textView"
                            android:id="@+id/users"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/users"
                            android:textColor="@color/colorBaseHeader"
                            android:textStyle="bold"
                            android:id="@+id/user_counter"

                            />
                    </LinearLayout>
                    <org.lucasr.twowayview.widget.TwoWayView
                        android:id="@+id/task_assignee"
                        android:layout_below="@+id/header_layout4"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        app:twowayview_layoutManager="ListLayoutManager"
                        android:orientation="horizontal">
                    </org.lucasr.twowayview.widget.TwoWayView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/layout3"
                    android:id="@+id/layout_assignee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/active_archive_status"
                        android:layout_width="wrap_content"
                        android:text="@string/project_status"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="40dp"
                        android:layout_toLeftOf="@+id/textView"

                        />

                    <RelativeLayout
                        android:layout_below="@+id/active_archive_status"
                        android:id="@+id/layout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:padding="25dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100">
                        </SeekBar>
                    </RelativeLayout>

                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:layout_marginLeft="100dp"
                        android:id="@+id/circularprogressBar"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:max="100"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        app:wheel_size="8"
                        app:donut_text_size="28dp"
                        android:layout_below="@+id/layout4"
                        android:layout_marginTop="10dp"
                        android:layout_centerInParent="true"
                        app:donut_text_color="@color/colorBaseHeader"
                        app:donut_finished_stroke_width="7dp"
                        app:donut_unfinished_stroke_width="7dp"
                        app:donut_finished_color="@color/colorBaseHeader"/>

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/parent2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="4.72"
        android:layout_alignParentBottom="true"
        android:background="@color/colorContentWrapper"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/comment"
                android:layout_width="100dp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bubble_alert_white"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorBaseWrapper" />

                <ImageView
                    android:id="@+id/delete1"
                    android:layout_width="40dp"
                    android:src="@drawable/task_comment"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/text1"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/comments"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="3dp"/>
            </RelativeLayout>

        </RelativeLayout>
        <View android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight=".03"
            android:background="@color/white"/>
        <RelativeLayout
            android:id="@+id/documents"
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/docs_count"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bubble_alert_white"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorBaseWrapper" />

                <ImageView
                    android:id="@+id/delete2"
                    android:layout_width="40dp"
                    android:src="@drawable/task_undone"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/text3"
                    android:layout_height="40dp" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/documents"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="3dp"/>
            </RelativeLayout>

        </RelativeLayout>
        <View android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight=".03"
            android:background="@color/white"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/subtask"
                android:layout_width="100dp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/subtask_count"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bubble_alert_white"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorBaseWrapper" />

                <ImageView
                    android:id="@+id/delete3"
                    android:layout_width="50dp"
                    android:src="@drawable/sub_tasks"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/text6"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sub_tasks"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="3dp"/>
            </RelativeLayout>

        </RelativeLayout>
        <View android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight=".03"
            android:background="@color/white"/>
        <RelativeLayout
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="47dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/trash"
                android:layout_gravity="center"
                android:layout_height="47dp" />
            <TextView
                android:id="@+id/text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="3dp"/>
        </RelativeLayout>
        <View android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight=".03"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/mark_as_done"
            android:layout_width="0dp"
            android:text="@string/task_as_done"
            android:padding="4dp"
            android:gravity="center"
            android:layout_weight="1.1"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
</RelativeLayout>