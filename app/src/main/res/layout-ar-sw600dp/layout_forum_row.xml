<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/layout123"
        android:layout_toRightOf="@+id/selected_project"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            android:id="@+id/shadow_item_container"
            android:layout_width="match_parent"
            style="@style/ms9_DefaultShadowStyle"
            android:layout_height="match_parent"
            app:ms9_affectsDisplayedPosition="true"
            app:ms9_shadowElevation="2dp"
            app:ms9_shadowTranslationZ="1dp"
            app:ms9_useAmbientShadow="true">

            <RelativeLayout
                android:id="@+id/top_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:background="@color/colorBaseWrapper"
                android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:drag_edge="left"
            app:clickToClose="true">
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/btEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:background="@color/colorContentWrapper"
                android:text="Edit"
                />
            <TextView
                android:id="@+id/btDelete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:background="@color/red"
                android:text="Delete"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/parent2"
            android:background="@color/colorBaseWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/parent1"
            android:layout_toRightOf="@+id/rightarrow_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/comment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@+id/layout_comment"
                    android:layout_toStartOf="@+id/layout_comment"
                    android:layout_centerVertical="true"
                    android:text="@string/forums_title"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/layout_comment"
                    android:layout_width="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_height="45dp">
                    <TextView
                        android:id="@+id/notify_alert1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text="112"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="8sp"

                        android:background="@drawable/bubble_alert_black"
                        android:layout_alignParentTop="true" />

                    <ImageView
                        android:id="@+id/delete1"
                        android:layout_width="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/forums"
                        android:layout_height="20dp" />
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/comment_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_below="@+id/layout1"
                android:padding="5dp"
                android:text="@string/forums_description"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/rightarrow_layout"
            android:layout_width="20dp"
            android:layout_alignParentLeft="true"

            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#E2DBDB">

            <ImageView
                android:id="@+id/right_arrow_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="5dp"
                android:background="@drawable/circle_right"/>
        </LinearLayout>
        </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>
    </RelativeLayout>
    </RelativeLayout>
</com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
    </RelativeLayout>
</RelativeLayout>