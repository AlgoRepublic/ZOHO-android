<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsTasks.TaskScheduleFragment">

    <!-- TODO: Update blank fragment_forums layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="50dp">
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_start_date"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_start_date1"
                android:orientation="horizontal"
                >
            <ImageView
                android:id="@+id/start_date_image"
                android:layout_width="22dp"
                android:text="@string/start_date"
                android:textAllCaps="false"
                android:background="?attr/calendar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_height="22dp"

                />
            <TextView
                android:id="@+id/text1"
                android:layout_toRightOf="@+id/start_date_image"
                android:layout_toEndOf="@+id/start_date_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                android:typeface="monospace" />
                </RelativeLayout>
            <TextView
                android:id="@+id/start_date"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/btn_start_date1"
                android:layout_width="match_parent"
                android:text="@string/start_date"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingRight="2dp"
                android:paddingEnd="2dp"
                android:background="@drawable/round_border_black"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/btn_end_date"
            >
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_end_date1"
                android:orientation="horizontal"
                >
            <ImageView
                android:id="@+id/end_date_image"
                android:layout_width="22dp"
                android:text="@string/start_date"
                android:textAllCaps="false"
                android:background="?attr/calendar"
                android:layout_centerVertical="true"
                android:layout_height="22dp"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/end_date_image"
                android:layout_toEndOf="@+id/end_date_image"
                android:layout_height="wrap_content"
                android:text="@string/end_date"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                android:typeface="monospace" />
                </RelativeLayout>
            <TextView
                android:id="@+id/end_date"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/btn_end_date1"
                android:layout_width="match_parent"
                android:text="@string/end_date"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingRight="2dp"
                android:paddingEnd="2dp"
                android:background="@drawable/round_border_black"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>