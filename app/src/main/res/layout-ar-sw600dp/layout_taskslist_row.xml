<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginBottom="3dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingEnd="5dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:gravity="center_vertical"
    android:fitsSystemWindows="true"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingStart="5dp">


    <RelativeLayout
        android:id="@+id/layout123"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            android:id="@+id/shadow_item_container"
            android:layout_width="match_parent"
            style="@style/ms9_DefaultShadowStyle"
            android:layout_height="match_parent"
            app:ms9_affectsDisplayedPosition="true"
            app:ms9_shadowElevation="2dp"
            android:layout_toStartOf="@+id/priority_bar"
            app:ms9_shadowTranslationZ="1dp"
            app:ms9_useAmbientShadow="true">

            <RelativeLayout
                android:id="@+id/top_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:background="@color/colorBaseWrapper"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <com.daimajia.swipe.SwipeLayout
                        android:id="@+id/swipe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:clickToClose="true">
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/btEdit"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="17sp"
                                android:textColor="@color/colorWhite"
                                android:background="@color/colorContentWrapper"
                                android:text="Edit"
                                />
                            />
                            <TextView
                                android:id="@+id/btDelete"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="17sp"
                                android:textColor="@color/colorWhite"
                                android:background="@color/red"
                                android:text="Delete"
                                />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/parent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:id="@+id/parent1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_toRightOf="@+id/rightarrow_layout"
                                android:layout_toEndOf="@+id/rightarrow_layout"
                                android:background="@color/colorBaseWrapper">

                                <ImageView
                                    android:id="@+id/task_image"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="10dp"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/task_progress" />

                                <LinearLayout
                                    android:id="@+id/layout1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/task_image"
                                    android:layout_toEndOf="@+id/task_image"
                                    android:orientation="vertical"
                                    android:paddingBottom="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingTop="10dp">

                                    <LinearLayout
                                        android:id="@+id/layout2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:id="@+id/task_name"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1.1"
                                            android:gravity="left|start"
                                            android:ellipsize="marquee"
                                            android:singleLine="true"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:textSize="18sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/task_date"
                                            android:layout_width="0dp"
                                            android:paddingEnd="5dp"
                                            android:singleLine="true"

                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.9"
                                            android:gravity="right|end"
                                            android:textSize="16sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/layout3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="top"
                                        android:weightSum="2">

                                        <TextView
                                            android:id="@+id/project_name"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="top"
                                            android:layout_weight="1.2"
                                            android:gravity="left|start"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:text=""
                                            android:textSize="18sp"
                                            android:textStyle="bold" />

                                        <RelativeLayout
                                            android:layout_width="0dp"
                                            android:layout_height="20dp"
                                            android:layout_below="@+id/general"
                                            android:gravity="center_vertical"
                                            android:paddingEnd="5dp"

                                            android:layout_weight="0.8">

                                            <TextView
                                                android:id="@+id/task_comment"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_toLeftOf="@+id/bar"
                                                android:layout_toStartOf="@+id/bar"
                                                android:gravity="left|start"
                                                android:text="@string/task_comment"
                                                android:textSize="16sp" />

                                            <RadioButton
                                                android:id="@+id/bar"
                                                android:layout_width="1.5dp"
                                                android:layout_margin="5dp"
                                                android:layout_height="match_parent"
                                                android:layout_centerVertical="true"
                                                android:text="@string/divider"
                                                android:checked="true"
                                                android:layout_toStartOf="@+id/task_users"
                                                android:layout_toLeftOf="@+id/task_users"/>

                                            <TextView
                                                android:id="@+id/task_users"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentRight="true"
                                                android:layout_alignParentEnd="true"
                                                android:layout_centerVertical="true"
                                                android:gravity="left|start"
                                                android:text="@string/task_user"
                                                android:textSize="16sp" />
                                        </RelativeLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </RelativeLayout>
                            <LinearLayout
                                android:id="@+id/rightarrow_layout"
                                android:layout_width="20dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="#E2DBDB">

                                <ImageView
                                    android:id="@+id/right_arrow_image"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_margin="5dp"
                                    android:background="@drawable/circle_left"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </com.daimajia.swipe.SwipeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
        <View
            android:id="@+id/priority_bar"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/roundable_prioritybar"/>
    </RelativeLayout>

</LinearLayout>