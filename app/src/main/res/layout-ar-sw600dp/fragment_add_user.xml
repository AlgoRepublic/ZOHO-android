<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBaseWrapper"
    android:fitsSystemWindows="true"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
        android:id="@+id/shadow_item_container"
        android:layout_width="match_parent"
        style="@style/ms9_DefaultShadowStyle"
        android:layout_height="wrap_content"
        app:ms9_useAmbientShadow="true"
        app:ms9_affectsDisplayedPosition="true"
        app:ms9_shadowTranslationZ="1dp"
        app:ms9_shadowElevation="3dp">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="2dp"
            android:background="?attr/color_line"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/lblListHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/add_user"
                android:gravity="center"
                android:textColor="@color/white" />
        </RelativeLayout>
    </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_margin="10dp"
        android:layout_below="@+id/shadow_item_container"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                app:civ_border="true"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/colorBaseMenu"
                app:civ_shadow_radius="3"
                android:id="@+id/profile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:src="?attr/nav_user"
                app:civ_border_color="?attr/color_line"
                app:civ_border_width="4dp"/>

            <EditText
                android:id="@+id/first_name"
                android:layout_below="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:hint="@string/first_name"
                android:textSize="25sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:background="?attr/round_border"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="?attr/color_line"
                android:textColorHint="@color/colorBaseMenu"
                />


            <EditText
                android:id="@+id/last_name"
                android:layout_below="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="@string/last_name"
                android:inputType="textMultiLine"
                android:textSize="25sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:background="?attr/round_border"
                android:textColor="?attr/color_line"
                android:textColorHint="@color/colorBaseMenu" />

            <EditText
                android:id="@+id/nick_name"
                android:layout_below="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="@string/nick_name"
                android:inputType="textMultiLine"
                android:textSize="25sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:background="?attr/round_border"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="?attr/color_line"
                android:textColorHint="@color/colorBaseMenu" />

            <EditText
                android:id="@+id/user_email"
                android:layout_below="@+id/nick_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="@string/email"
                android:textSize="25sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:background="?attr/round_border"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="?attr/color_line"
                android:textColorHint="@color/colorBaseMenu" />

            <EditText
                android:id="@+id/user_phoneno"
                android:layout_below="@id/user_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:textSize="25sp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:background="?attr/round_border"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="?attr/color_line"
                android:textColorHint="@color/colorBaseMenu" />
            <EditText
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:background="?attr/round_border"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="?attr/color_line"
                android:textColorHint="@color/colorBaseMenu"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:id="@+id/role_list"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:editable="false"
                android:imeOptions="actionNext"
                android:hint="@string/user_role"
                android:layout_below="@+id/user_phoneno"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/role_list"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="@string/assigned_projects"
                    android:textColor="?attr/color_line"
                    android:textColorHint="@color/colorBaseMenu"
                    android:textSize="13.33sp"
                    android:typeface="monospace" />

                <com.guna.libmultispinner.MultiSelectionSpinner
                    android:id="@+id/projects_list"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>