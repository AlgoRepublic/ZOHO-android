<resources>
    <!-- BLUE THEME -->
    <style name="AppThemeBlue" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="android:colorPrimaryDark">@color/blue</item>
        <item name="android:colorBackground">@color/colorBaseWrapperBlue</item>
        <item name="android:colorForeground">@color/colorPrimaryBlue</item>
        <item name="colorAccent">@color/colorPrimaryBlue</item>
        <item name="checkboxStyle">@style/blueCheckBoxStyle</item>
        <item name="android:textViewStyle">@style/blueTextView</item>
        <item name="radioButtonStyle">@style/blueRadioButton</item>
        <item name="seekBarStyle">@style/blueSeekBar</item>
        <item name="android:buttonStyle">@style/blueButton</item>
    </style>

    <style name="blueButton" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorSecondaryBlue</item>
    </style>

    <style name="blueRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/blue_radiobutton</item>
    </style>

    <style name="blueCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimaryBlue</item>
    </style>
    <style name="blueTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryBlue</item>
    </style>

    <style name="blueSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/progress_horizontal</item>
        <item name="android:thumb">@drawable/thumb_image</item>
        <item name="android:thumbTint">@color/colorPrimaryBlue</item>
        <item name="android:progressTint">@color/colorPrimaryBlue</item>
        <item name="android:foreground">@color/colorPrimaryBlue</item>
        <item name="android:minHeight">6dip</item>
        <item name="android:maxHeight">6dip</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorBaseHeader</item>
        <item name="colorPrimaryDark">@color/colorBaseDark</item>
        <item name="android:colorBackground">@color/colorBaseWrapper</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:colorForeground">@color/colorBaseHeader</item>
        <item name="colorAccent">@color/colorBaseHeader</item>
        <item name="checkboxStyle">@style/blackCheckBoxStyle</item>
        <item name="android:textViewStyle">@style/blackTextView</item>
        <item name="seekBarStyle">@style/blackSeekBar</item>
        <item name="android:buttonStyle">@style/blackButton</item>
    </style>

    <style name="blackButton" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorContentWrapper</item>
    </style>

    <style name="blackCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorBaseHeader</item>
    </style>

    <style name="blackTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBaseHeader</item>
    </style>

    <style name="blackRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/black_radiobutton</item>
    </style>


    <style name="blackSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/progress_horizontal</item>
        <item name="android:thumb">@drawable/thumb_image</item>
        <item name="android:thumbTint">@color/colorBaseHeader</item>
        <item name="android:progressTint">@color/colorBaseHeader</item>
        <item name="android:foreground">@color/colorBaseHeader</item>
        <item name="android:minHeight">6dip</item>
        <item name="android:maxHeight">6dip</item>
    </style>


    <!--not sure yet-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorBaseHeader</item>
        <item name="colorPrimaryDark">@color/colorBaseHeader</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="blackPagerTitleStrip" parent="Widget.Design.TabLayout">
        <item name="android:textColor">@android:color/white</item>
        <item name="tabIndicatorColor">@color/colorBaseMenu</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabBackground">@color/colorBaseHeader</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>

    </style>

    <style name="bluePagerTitleStrip" parent="Widget.Design.TabLayout">
        <item name="android:textColor">@android:color/white</item>
        <item name="tabIndicatorColor">@color/colorBaseMenu</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabBackground">@color/colorPrimaryBlue</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
    </style>

</resources>
