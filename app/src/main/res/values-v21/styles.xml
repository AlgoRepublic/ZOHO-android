<resources>
    <!-- BLUE THEME -->
    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="android:colorPrimaryDark">@color/blue</item>
        <item name="android:colorBackground">@color/colorBaseWrapperBlue</item>
        <item name="android:colorForeground">@color/colorPrimaryBlue</item>
        <item name="colorAccent">@color/colorPrimaryBlue</item>
        <item name="checkboxStyle">@style/blueCheckBoxStyle</item>
        <item name="android:textViewStyle">@style/blueTextView</item>
        <item name="seekBarStyle">@style/blueSeekBar</item>
        <item name="android:ratingBarStyle">@style/blueRatingBar</item>
        <item name="android:radioButtonStyle">@style/blueRadioButton</item>
        <item name="android:tabWidgetStyle">@style/bluePagerTitleStrip</item>
        <item name="android:buttonStyle">@style/blueButton</item>
        <item name="android:editTextStyle">@style/blueEditTextStyle</item>
        <item name="searchViewStyle">@style/blueSearchView</item>

        <item name="fastlink_login">@drawable/fastlink_login_blue</item>
        <item name="fastlink_loading">@drawable/fastlink_loading_blue</item>
        <item name="alerticon_picture">@drawable/alerticon_blue</item>
        <item name="calendar">@drawable/calendar_blue</item>
        <item name="folder">@drawable/folder_blue</item>
        <item name="milestone">@drawable/milestone_blue</item>
        <item name="task_desc_small">@drawable/task_desc_small_blue</item>
        <item name="nav_user">@drawable/nav_user_blue</item>
        <item name="bubble_alert">@drawable/bubble_alert_blue</item>
        <item name="circle_left">@drawable/circle_left_blue</item>
        <item name="circle_right">@drawable/circle_right_blue</item>
        <item name="task_progress">@drawable/task_progress_blue</item>
        <item name="underline_textview">@drawable/underline_textview_blue</item>
        <item name="round_border">@drawable/round_border_blue</item>
        <item name="forums">@drawable/forums_blue</item>
        <item name="color_line">@color/colorSecondaryBlue</item>
        <item name="left_header">@drawable/left_header_blue</item>
        <item name="hint_color">@color/colorBlueGrey</item>
        <item name="globe">@drawable/globe_blue</item>
        <item name="roundable_drawable">@drawable/roundable_corner_blue</item>
        <item name="image_splash">@drawable/img_splash_blue</item>
        <item name="left_header_ar">@drawable/left_header_ar_blue</item>

    </style>

    <style name="blueButton" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorSecondaryBlue</item>
    </style>
    <style name="blueSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/colorPrimaryBlue</item>
    </style>
    <style name="blueButtonTextView" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textColor">@color/colorPrimaryBlue</item>
    </style>
    <style name="blueRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressBackgroundTint">@color/colorSecondaryBlue</item>
        <item name="android:progressTint">@color/colorPrimaryBlue</item>
        <item name="android:secondaryProgressTint">@color/colorSecondaryBlue</item>
    </style>

    <style name="blueRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/blue_radiobutton</item>
        <item name="android:textColor">@color/colorPrimaryBlue</item>
        <item name="android:button">@null</item>
    </style>

    <style name="blueCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimaryBlue</item>
    </style>
    <style name="blueTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryBlue</item>
    </style>

    <style name="blueSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/progress_horizontal</item>
        <item name="android:thumb">@drawable/thumb_image</item>
        <item name="android:thumbTint">@color/colorPrimaryBlue</item>
        <item name="android:progressTint">@color/colorPrimaryBlue</item>
        <item name="android:minHeight">6dip</item>
        <item name="android:maxHeight">6dip</item>
    </style>
    <style name="bluePagerTitleStrip" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabBackground">@color/colorPrimaryBlue</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
    </style>

    <style name="blueEditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimaryBlue</item>
        <item name="android:background">@drawable/round_border_black</item>
        <item name="android:textColorHint">@color/colorPrimaryBlue</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorBaseHeader</item>
        <item name="colorPrimaryDark">@color/colorBaseDark</item>
        <item name="android:colorBackground">@color/colorBaseWrapper</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:colorForeground">@color/colorBaseHeader</item>
        <item name="colorAccent">@color/colorBaseHeader</item>
        <item name="checkboxStyle">@style/blackCheckBoxStyle</item>
        <item name="android:textViewStyle">@style/blackTextView</item>
        <item name="android:listViewStyle">@style/blackListViewStyle</item>
        <item name="seekBarStyle">@style/blackSeekBar</item>
        <item name="android:tabWidgetStyle">@style/blackPagerTitleStrip</item>
        <item name="android:buttonStyle">@style/blackButton</item>
        <item name="android:ratingBarStyle">@style/blackRatingBar</item>
        <item name="android:radioButtonStyle">@style/blackRadioButton</item>
        <item name="android:actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
        <item name="android:editTextStyle">@style/blackEditTextStyle</item>

        <item name="fastlink_login">@drawable/fastlink_login_black</item>
        <item name="fastlink_loading">@drawable/fastlink_loading_black</item>
        <item name="alerticon_picture">@drawable/alerticon_black</item>
        <item name="calendar">@drawable/calendar_black</item>
        <item name="folder">@drawable/folder_black</item>
        <item name="milestone">@drawable/milestone_black</item>
        <item name="task_desc_small">@drawable/task_desc_small_black</item>
        <item name="bubble_alert">@drawable/bubble_alert_black </item>
        <item name="nav_user">@drawable/nav_user_black</item>
        <item name="circle_left">@drawable/circle_left_black</item>
        <item name="circle_right">@drawable/circle_right</item>
        <item name="task_progress">@drawable/task_progress_black</item>
        <item name="underline_textview">@drawable/underline_textview_black</item>
        <item name="round_border">@drawable/round_border_black</item>
        <item name="forums">@drawable/forums</item>
        <item name="color_line">@color/colorBaseHeader</item>
        <item name="left_header">@drawable/left_header_black</item>
        <item name="globe">@drawable/globe</item>
        <item name="roundable_drawable">@drawable/roundable_corner</item>
        <item name="image_splash">@drawable/img_splash</item>
        <item name="left_header_ar">@drawable/left_header_ar_black</item>
    </style>

    <style name="blackRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressBackgroundTint">@color/colorBaseWrapper</item>
        <item name="android:progressTint">@color/colorBaseHeader</item>
        <item name="android:secondaryProgressTint">@color/colorBaseWrapper</item>
    </style>
    <style name="MyMenuTextAppearance" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="blackListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:scrollbarThumbVertical">@color/colorBaseHeader</item>
        <item name="android:background">@color/white</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:fadeScrollbars">false</item>
    </style>
    <style name="blackEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorBaseHeader</item>
        <item name="android:textColorHint">@color/colorContentWrapper</item>
    </style>
    <style name="blackButton" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorContentWrapper</item>
    </style>

    <style name="blackCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorBaseHeader</item>
    </style>

    <style name="blackTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBaseHeader</item>
    </style>

    <style name="blackRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/black_radiobutton</item>
        <item name="android:textColor">@color/colorBaseHeader</item>
        <item name="android:button">@null</item>
    </style>


    <style name="blackSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/progress_horizontal</item>
        <item name="android:thumb">@drawable/thumb_image</item>
        <item name="android:thumbTint">@color/colorBaseHeader</item>
        <item name="android:progressTint">@color/colorBaseHeader</item>
        <item name="android:minHeight">6dip</item>
        <item name="android:maxHeight">6dip</item>
    </style>


    <!--not sure yet-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorBaseHeader</item>
        <item name="colorPrimaryDark">@color/colorBaseHeader</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
