<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
        android:id="@+id/shadow_item_container"
        android:layout_width="match_parent"
        style="@style/ms9_DefaultShadowStyle"
        android:layout_height="wrap_content"
        app:ms9_useAmbientShadow="true"
        app:ms9_affectsDisplayedPosition="true"
        app:ms9_shadowTranslationZ="1dp"
        app:ms9_shadowElevation="3dp">
    <RelativeLayout
        android:id="@+id/listClick"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="6dp"
        android:background="@drawable/roundable_corner"
        android:layout_width="match_parent">
    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:paddingTop="5dp"
        android:layout_toLeftOf="@+id/imageViewlevelone"
        android:paddingBottom="5dp"
        android:layout_marginLeft="5dp"
        android:text="lksahdgiuasdsdsds" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageViewlevelone"
            android:adjustViewBounds="true"
            android:background="@drawable/level_one_down"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            />
        </RelativeLayout>
    </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>

</RelativeLayout>


