<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.algorepublic.zoho.FragmentsTasks.TaskPriorityFragment">

    <!-- TODO: Update blank fragment_forums layout -->
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/underline_textview"
        android:paddingBottom="5dp"
        android:text="@string/priority"
        android:textColor="@color/colorContentWrapper"
        android:textSize="25sp"
        android:typeface="monospace" />

    <ListView
        android:id="@+id/listview_priority"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text"
        android:layout_marginTop="10dp"
        android:choiceMode="singleChoice" />

</RelativeLayout>