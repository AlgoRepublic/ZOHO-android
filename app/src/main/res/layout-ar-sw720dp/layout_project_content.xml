<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">
    <View
        android:id="@+id/selected_project"
        android:layout_width="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/layout123"
        android:layout_alignTop="@+id/layout123"
        android:layout_marginBottom="4dp"
        android:background="@color/white" />
    <RelativeLayout
        android:id="@+id/layout123"
        android:layout_toLeftOf="@+id/selected_project"
        android:layout_toStartOf="@+id/selected_project"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            android:id="@+id/shadow_item_container"
            android:layout_width="match_parent"
            style="@style/ms9_DefaultShadowStyle"
            android:layout_height="match_parent"
            app:ms9_affectsDisplayedPosition="true"
            app:ms9_shadowElevation="2dp"
            app:ms9_shadowTranslationZ="1dp"
            app:ms9_useAmbientShadow="true">

            <RelativeLayout
                android:id="@+id/top_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@color/colorBaseWrapper"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <com.daimajia.swipe.SwipeLayout
                        android:id="@+id/swipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:clickToClose="true">
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/btEdit"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textIsSelectable="false"
                                android:clickable="false"
                                android:focusableInTouchMode="false"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:focusable="false"
                                android:background="@color/colorContentWrapper"
                                android:text="Edit"
                                />
                            <TextView
                                android:id="@+id/btDelete"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textSize="16sp"
                                android:textIsSelectable="false"
                                android:textColor="@color/white"
                                android:background="@color/red"
                                android:focusable="false"
                                android:clickable="false"
                                android:focusableInTouchMode="false"
                                android:text="Delete"
                                />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/container1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorBaseWrapper"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_toEndOf="@+id/rightarrow_layout"
                                android:layout_toRightOf="@+id/rightarrow_layout"
                                android:id="@+id/parent1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="5dp">
                                <RelativeLayout
                                    android:paddingTop="8dp"
                                    android:id="@+id/layout1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_toLeftOf="@+id/layout_tasks"
                                        android:layout_toStartOf="@+id/layout_tasks"
                                        android:id="@+id/project_title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:drawableLeft="@drawable/folder_black"
                                        android:drawablePadding="5dp"
                                        android:singleLine="true"
                                        android:ellipsize="end"
                                        android:drawableStart="@drawable/folder_black"
                                        android:paddingLeft="5dp"
                                        android:paddingStart="5dp"
                                        android:text="@string/projects"
                                        android:textSize="30sp"
                                        android:textStyle="bold" />

                                    <RelativeLayout
                                        android:id="@+id/layout_comment"
                                        android:layout_width="50dp"
                                        android:layout_height="60dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerHorizontal="true">

                                        <TextView
                                            android:id="@+id/milestone_alert"
                                            android:layout_width="32dp"
                                            android:layout_height="32dp"

                                            android:background="@drawable/bubble_alert_black"
                                            android:gravity="center"
                                            android:singleLine="true"
                                            android:text="0"
                                            android:textSize="12sp" />

                                        <ImageView
                                            android:id="@+id/delete1"
                                            android:layout_width="32dp"
                                            android:layout_height="32dp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentBottom="true"
                                            android:src="@drawable/milestone" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/layout_users"
                                        android:layout_width="50dp"
                                        android:layout_height="60dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_toLeftOf="@+id/layout_comment"
                                        android:layout_toStartOf="@id/layout_comment">

                                        <TextView
                                            android:id="@+id/users_alert"
                                            android:layout_width="32dp"
                                            android:layout_height="32dp"

                                            android:background="@drawable/bubble_alert_black"
                                            android:gravity="center"
                                            android:singleLine="true"
                                            android:text="0"
                                            android:textSize="12sp" />

                                        <ImageView
                                            android:id="@+id/delete2"
                                            android:layout_width="32dp"
                                            android:layout_height="32dp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentBottom="true"
                                            android:src="@drawable/nav_user" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/layout_tasks"
                                        android:layout_width="50dp"
                                        android:layout_height="60dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_toLeftOf="@+id/layout_users"
                                        android:layout_toStartOf="@+id/layout_users">

                                        <TextView
                                            android:id="@+id/task_alert"
                                            android:layout_width="32dp"
                                            android:layout_height="32dp"

                                            android:background="@drawable/bubble_alert_black"
                                            android:gravity="center"
                                            android:singleLine="true"
                                            android:text="0"
                                            android:textSize="12sp" />

                                        <ImageView
                                            android:id="@+id/delete3"
                                            android:layout_width="32dp"
                                            android:layout_height="32dp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentBottom="true"
                                            android:src="@drawable/task_desc_small" />
                                    </RelativeLayout>
                                </RelativeLayout>

                                <View
                                    android:id="@+id/view"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@+id/layout1"
                                    android:layout_margin="3dp"
                                    android:background="@color/colorBaseHeader" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/view"
                                    android:padding="3dp">

                                    <TextView
                                        android:id="@+id/project_desc"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:lines="3"
                                        android:ellipsize="end"
                                        android:textSize="25sp" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/project_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />

                            </RelativeLayout>
                            <LinearLayout
                                android:id="@+id/rightarrow_layout"
                                android:layout_width="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="#E2DBDB">

                                <ImageView
                                    android:id="@+id/right_arrow_image"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_margin="5dp"
                                    android:background="@drawable/circle_left"/>
                            </LinearLayout>

                        </RelativeLayout>

                    </com.daimajia.swipe.SwipeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
    </RelativeLayout>
</RelativeLayout>