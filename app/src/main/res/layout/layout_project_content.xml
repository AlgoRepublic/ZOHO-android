<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">
    <com.daimajia.swipe.SwipeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:clickToClose="true">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/btOpen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@color/colorContentWrapper"
                android:text="Edit"
                />
            <TextView
                android:id="@+id/btDelete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@color/red"
                android:text="Delete"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/selected_project"
            android:layout_width="5dp"
            android:layout_height="111dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:background="@color/white" />

        <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
            android:id="@+id/shadow_item_container"
            android:layout_width="match_parent"
            style="@style/ms9_DefaultShadowStyle"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/selected_project"
            android:layout_toRightOf="@id/selected_project"
            app:ms9_affectsDisplayedPosition="true"
            app:ms9_shadowElevation="2dp"
            app:ms9_shadowTranslationZ="1dp"
            app:ms9_useAmbientShadow="true">

            <RelativeLayout
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/colorBaseWrapper"
                android:orientation="horizontal"
                android:padding="8dp">

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_toLeftOf="@+id/layout_tasks"
                        android:id="@+id/project_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/folder_black"
                        android:drawablePadding="5dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:drawableStart="@mipmap/folder_black"
                        android:paddingLeft="5dp"
                        android:paddingStart="5dp"
                        android:text="@string/projects"
                        android:textColor="@color/colorBaseHeader"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/layout_comment"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/milestone_alert"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/bubble_alert_black"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="112"
                            android:textColor="@color/blackBackground"
                            android:textSize="7sp" />

                        <ImageView
                            android:id="@+id/delete1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/milestone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_users"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:layout_toLeftOf="@+id/layout_comment"
                        android:layout_toStartOf="@id/layout_comment">

                        <TextView
                            android:id="@+id/users_alert"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/bubble_alert_black"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="1"
                            android:textColor="@color/blackBackground"
                            android:textSize="7sp" />

                        <ImageView
                            android:id="@+id/delete2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/nav_user" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_tasks"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:layout_toLeftOf="@+id/layout_users"
                        android:layout_toStartOf="@+id/layout_users">

                        <TextView
                            android:id="@+id/task_alert"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/bubble_alert_black"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="112"
                            android:textColor="@color/blackBackground"
                            android:textSize="7sp" />

                        <ImageView
                            android:id="@+id/delete3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/task_desc_small" />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/layout1"
                    android:layout_margin="3dp"
                    android:background="@color/colorBaseHeader" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/project_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/project_delete"
                        android:layout_toStartOf="@+id/project_delete"
                        android:lines="3"
                        android:textColor="@color/colorBaseHeader"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/project_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/project_desc"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="@string/edit"
                        android:textColor="@color/colorBaseHeader"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/project_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/project_desc"
                        android:text="@string/delete"
                        android:textColor="@color/colorBaseHeader"
                        android:textSize="14sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/project_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </RelativeLayout>
        </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
</com.daimajia.swipe.SwipeLayout>
</RelativeLayout>