<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBaseWrapper"
    android:orientation="vertical"
    tools:context="com.algorepublic.zoho.ActivityTask">
    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:background="@color/colorBaseMenu"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Title"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
        <Button
            android:id="@+id/btn_title"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toRightOf="@+id/title_text"
            android:layout_centerVertical="true"
            android:background="@drawable/fab_add" />

    <View
        android:layout_below="@+id/title_text"
        android:layout_width="match_parent"
        android:background="@color/colorBaseMenu"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_below="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">

        <GridView
            android:id="@+id/gridview_taskmenu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:numColumns="3"
            android:background="@color/colorBaseMenu"
            android:layout_weight=".9"
            android:verticalSpacing="0dp"
            android:horizontalSpacing="0dp"
            android:stretchMode="columnWidth"
            android:padding="5dp">
        </GridView>

        <FrameLayout
            android:id="@+id/edittask_container"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:padding="5dp"
            android:layout_width="match_parent">
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
