<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_comment"
        android:padding="15dp">

        <TextView
            android:id="@+id/comment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/test_forum"
            android:textColor="@color/colorBaseHeader"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_title"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/colorBaseHeader"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_description"
            android:layout_marginTop="10dp"
            android:text="@string/content"
            android:textColor="@color/colorBaseHeader"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/colorBaseHeader" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_description"
            android:layout_marginTop="10dp"
            android:text="@string/comment"
            android:paddingBottom="10dp"
            android:textColor="@color/colorBaseHeader"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/forums_comment_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView7"
            android:choiceMode="singleChoice"
            android:descendantFocusability="beforeDescendants"
            android:divider="@null"
            android:scrollbars="none" />
    </RelativeLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_comment"
        android:background="@color/colorBaseWrapper"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/comment_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:layout_weight="1.5"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:hint="Send a comment"
            android:singleLine="true"
            android:ellipsize="end"
            android:imeActionId="@integer/add_comment"
            android:imeOptions="actionSend"
            android:imeActionLabel="Add"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scrollHorizontally="true"
            android:textSize="16sp"
            android:layout_gravity="center_vertical" />
        <requestFocus/>

        <Button
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/add"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:layout_weight=".5"
            android:background="@color/colorContentWrapper"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>