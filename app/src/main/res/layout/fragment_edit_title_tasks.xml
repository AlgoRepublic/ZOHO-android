<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/colorBaseWrapper"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/task_image"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/title_name"
        android:src="@mipmap/user_white"
        android:layout_gravity="top" />
    <EditText
        android:id="@+id/title_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Task Title"
        android:textCursorDrawable="@null"
        android:textColor="@color/colorBaseHeader"
        android:padding="10dp"
        android:gravity="top"
        android:textSize="14sp"
        android:background="@drawable/round_border"
        android:layout_toRightOf="@+id/task_image"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColorHint="@color/colorBaseWrapper"/>
</RelativeLayout>