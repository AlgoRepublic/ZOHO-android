<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/list_background" >
        <View
            android:id="@+id/priority_bar"
            android:layout_width="4dp"
            android:layout_alignBottom="@+id/layout1"
            android:layout_alignTop="@+id/layout1"
            android:background="@drawable/roundable_prioritybar"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">
        </View>
        <ImageView
            android:id="@+id/task_image"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_toRightOf="@+id/priority_bar"
            android:src="@mipmap/user_white"
            android:layout_gravity="center" />
    <LinearLayout
        android:layout_toRightOf="@+id/task_image"
        android:layout_height="match_parent"
        android:id="@+id/layout1"
        android:orientation="vertical"
        android:layout_width="match_parent" >
        <LinearLayout
            android:id="@+id/layout2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:weightSum="2">
            <TextView
                android:id="@+id/task_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:id="@+id/task_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right|end"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorDarkgray"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:weightSum="2">
            <TextView
                android:id="@+id/project_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/general" >
                <TextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:text="1 Comment"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/holo_blue_dark"
                    />
                <LinearLayout
                    android:id="@+id/layout_assignee"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>