<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/list_background" >
        <View
            android:id="@+id/priority_bar"
            android:layout_width="4dp"
            android:layout_alignBottom="@+id/layout1"
            android:layout_alignTop="@+id/layout1"
            android:background="@drawable/roundable_prioritybar"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">
        </View>
        <ImageView
            android:id="@+id/task_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_toRightOf="@+id/priority_bar"
            android:src="@drawable/ic_check_circle_black_24dp"
            android:layout_gravity="center" />
    <LinearLayout
        android:layout_toRightOf="@+id/task_image"
        android:layout_height="match_parent"
        android:id="@+id/layout1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent" >
        <LinearLayout
            android:id="@+id/layout2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:id="@+id/task_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:id="@+id/task_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right|end"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorDarkGray"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:weightSum="2">
            <TextView
                android:id="@+id/project_name"
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_below="@+id/general" >
                <TextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="left"
                    android:text="10 Comments"
                    android:layout_toLeftOf="@+id/bar"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/holo_blue_dark"
                    />
                <View
                    android:id="@+id/bar"
                    android:layout_width="1dp"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@+id/task_users"
                    android:background="@color/colorPrimary"
                    android:layout_height="match_parent">
                </View>
                <TextView
                    android:id="@+id/task_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="left"
                    android:text="10 Users"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/holo_blue_dark"
                    />
            </RelativeLayout>
        </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>