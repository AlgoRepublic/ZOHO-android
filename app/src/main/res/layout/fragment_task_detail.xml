<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightgray"
    tools:context=".fragments.TaskDetailFragment">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_above="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="80dp"
            android:src="@drawable/user"
            android:layout_centerHorizontal="true"
            android:layout_height="30dp" />
    <RelativeLayout
        android:id="@+id/layout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_margin="10dp">
        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout3"
            android:paddingTop="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/task_name"
                android:layout_width="match_parent"
                android:text="dsds"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_toLeftOf="@+id/textView"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/task_desc"
                android:layout_width="match_parent"
                android:text="dsds"
                android:layout_below="@+id/task_name"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_toLeftOf="@+id/textView"
                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/textView"
                android:layout_width="80dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/task_name"
                android:layout_centerHorizontal="true"
                android:layout_height="30dp" />

            <RelativeLayout
                android:id="@+id/layout_assignee"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:id="@+id/assignee"
                    android:layout_width="30dp"
                    android:src="@drawable/nav_user"
                    android:layout_alignParentLeft="true"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/assignee_name"
                    android:layout_width="match_parent"
                    android:text="dsds"
                    android:ellipsize="end"
                    android:paddingLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/assignee"
                    android:textColor="@android:color/black"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true">

            <app.minimize.com.seek_bar_compat.SeekBarCompat
                android:id="@+id/seekBar"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:maxHeight="300sp"
                app:progressColor="#AFF123"
                android:layout_centerVertical="true"
                app:progressBackgroundColor="#000"
                app:thumbColor="#FF4444"
                app:thumbAlpha="1.0"/>
            <TextView
                android:id="@+id/percentage"
                android:layout_width="wrap_content"
                android:text="23%"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/seekBar"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorDarkgray"
                />
            <TextView
                android:id="@+id/taskdate"
                android:layout_width="wrap_content"
                android:text="23%"
                android:padding="5dp"
                android:gravity="right"
                android:layout_toRightOf="@+id/percentage"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorDarkgray"
                />
        </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="3"
        android:padding="5dp"
        android:background="@drawable/topborder"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_comment"
            android:layout_gravity="center"
            android:layout_height="match_parent" />

        <View android:layout_height="match_parent"
            android:layout_width="2dp"
            android:background="#90909090"/>

        <TextView
            android:id="@+id/mark_as_done"
            android:layout_width="wrap_content"
            android:text="Mark as done"
            android:padding="2dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/seekBar"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            />
    </LinearLayout>
</RelativeLayout>
