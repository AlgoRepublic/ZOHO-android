<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightgray"
    tools:context=".fragments.TaskDetailFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/parent1"
        android:layout_above="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout_tasktitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/roundable_graybar"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/task_name"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
            </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_parent"
        android:layout_below="@+id/layout_tasktitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout3"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/header_layout1"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/category"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/priority"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/task_added"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/header_layout2"
                android:layout_below="@+id/header_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="dsds"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="dsds"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="dsds"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/header_layout3"
                android:layout_below="@+id/header_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/task_details"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
            <TextView
                android:id="@+id/task_desc"
                android:layout_width="match_parent"
                android:text="dsds"
                android:layout_below="@+id/task_name"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:ellipsize="end"
                android:textColor="@color/colorPrimaryDark"
                />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/header_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/header_layout3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/task_users"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/task_startdate"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/task_enddate"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/header_layout5"
                android:layout_below="@+id/header_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="dsds"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="dsds"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="dsds"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/layout3"
            android:layout_alignParentBottom="true"
            android:id="@+id/layout_assignee"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true">

                <app.minimize.com.seek_bar_compat.SeekBarCompat
                    android:id="@+id/seekBar"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:maxHeight="300sp"
                    app:progressColor="#AFF123"
                    android:layout_centerVertical="true"
                    app:progressBackgroundColor="#000"
                    app:thumbColor="#FF4444"
                    app:thumbAlpha="1.0"/>

                <TextView
                    android:id="@+id/taskdate"
                    android:layout_width="wrap_content"
                    android:text="23%"
                    android:padding="5dp"
                    android:gravity="right"
                    android:layout_toRightOf="@+id/seekBar"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorAccent"
                    />
            </RelativeLayout>
            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/arc_progress"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@+id/layout4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:arc_progress="70"
                app:arc_bottom_text_size="16sp"
                app:arc_suffix_text="%"
                app:arc_text_color="@color/colorAccent"
                app:arc_stroke_width="5dp"
                app:arc_unfinished_color="@android:color/transparent"
                app:arc_finished_color="@color/colorAccent"/>
        </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/parent2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="4"
        android:padding="5dp"
        android:background="@drawable/topborder"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:src="@drawable/ic_comment"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/alarm"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:src="@drawable/ic_alarm_24dp"
            android:layout_gravity="center"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/mark_as_done"
            android:layout_width="0dp"
            android:text="Mark as done"
            android:padding="2dp"
            android:gravity="center"
            android:layout_weight="1.6"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/seekBar"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
</RelativeLayout>
