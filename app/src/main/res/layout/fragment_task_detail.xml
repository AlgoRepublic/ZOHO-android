<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.TaskDetailFragment"
    android:background="@color/colorLightgray">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_above="@+id/parent2"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/parent1"
        android:layout_above="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">
        <RelativeLayout
            android:id="@+id/layout_tasktitle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true">
            <View
                android:id="@+id/priority_bar"
                android:layout_width="4dp"
                android:layout_marginRight="3dp"
                android:layout_alignBottom="@+id/layout1"
                android:layout_alignTop="@+id/layout1"
                android:background="@drawable/roundable_prioritybar"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">
            </View>

            <TextView
                android:id="@+id/task_name"
                android:layout_width="fill_parent"
                android:text="@string/task_name"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="left"
                android:layout_toRightOf="@+id/priority_bar"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
            </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_parent"
        android:layout_below="@+id/layout_tasktitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/layout3"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/header_layout1"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:text="@string/task_startdate"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:text="dsds"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:text="@string/category"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:id="@+id/category"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:text="dsds"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/header_layout2"
                android:layout_below="@+id/header_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:text="@string/task_duedate"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:text="dsds"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/header_layout3"
                android:layout_below="@+id/header_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/task_details"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
            <TextView
                android:id="@+id/task_desc"
                android:layout_width="match_parent"
                android:layout_below="@+id/task_name"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:lines="4"
                android:ellipsize="end"
                android:textColor="@color/colorPrimaryDark"
                />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/header_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/header_layout3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/task_users"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />

            </LinearLayout>
            <org.lucasr.twowayview.widget.TwoWayView
                android:id="@+id/task_assignee"
                android:layout_below="@+id/header_layout4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="3"
                app:twowayview_layoutManager="ListLayoutManager"
                android:orientation="horizontal">
            </org.lucasr.twowayview.widget.TwoWayView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/layout3"
            android:id="@+id/layout_assignee"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true">

                <SeekBar
                    style="@style/Base.Widget.AppCompat.SeekBar"
                    android:id="@+id/seekBar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:thumb="@drawable/thumb_image"
                    android:thumbTint="@color/colorPrimary"
                    android:progressTint="@color/colorPrimary"
                    android:foreground="@color/colorPrimary"
                    android:maxHeight="50000dip"
                    android:max="100" >
                </SeekBar>
            </RelativeLayout>

            <com.github.lzyzsd.circleprogress.DonutProgress

                android:layout_marginLeft="50dp"
                android:id="@+id/seekBar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/layout4"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                custom:donut_text_color="@color/colorPrimary"
                custom:donut_finished_stroke_width="4dp"
                custom:donut_unfinished_stroke_width="4dp"
                custom:donut_finished_color="@color/colorPrimary"

                />
            <!--<com.jesusm.holocircleseekbar.lib.HoloCircleSeekBar-->
                <!--android:layout_centerInParent="true"-->
                <!--android:id="@+id/seekBar"-->
                <!--android:layout_below="@+id/layout4"-->
                <!--android:layout_width="120dp"-->
                <!--android:layout_height="120dp"-->
                <!--app:max="100"-->
                <!--android:layout_margin="5dp"-->
                <!--app:wheel_size="8"-->
                <!--app:pointer_color="@color/colorAccent"-->
                <!--app:pointer_halo_color="@color/colorAccent"-->
                <!--app:pointer_size="10dp"-->
                <!--app:text_color="@color/colorAccent"-->
                <!--app:text_size="22sp"-->
                <!--app:wheel_active_color="@color/colorAccent"-->
                <!--app:wheel_unactive_color="@color/colorDarkgray"/>-->
            <!--<org.lucasr.twowayview.widget.TwoWayView-->
                <!--android:id="@+id/taskdetail_attachments"-->
                <!--android:layout_below="@+id/seekBar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="90dp"-->
                <!--android:weightSum="3"-->
                <!--app:twowayview_layoutManager="ListLayoutManager"-->
                <!--android:orientation="horizontal">-->
            <!--</org.lucasr.twowayview.widget.TwoWayView>-->
        </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/parent2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="4"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:background="@drawable/topborder"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:src="@drawable/ic_comment"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/alarm"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:src="@drawable/ic_alarm_24dp"
            android:layout_gravity="center"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/mark_as_done"
            android:layout_width="0dp"
            android:text="Mark as done"
            android:padding="2dp"
            android:gravity="center"
            android:layout_weight="1.6"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
</RelativeLayout>