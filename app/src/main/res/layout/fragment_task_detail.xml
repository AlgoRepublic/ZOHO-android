<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightgray"
    tools:context=".fragments.TaskDetailFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/parent1"
        android:layout_above="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout_tasktitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/roundable_graybar"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/task_name"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="left"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
            </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_parent"
        android:layout_below="@+id/layout_tasktitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout3"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/header_layout1"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:text="@string/task_startdate"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:text="dsds"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:text="@string/category"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:id="@+id/category"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:text="dsds"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/header_layout2"
                android:layout_below="@+id/header_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:text="@string/task_enddate"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:text="dsds"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:text="@string/priority"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:id="@+id/priority"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:text="@string/task_added"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/header_layout3"
                android:layout_below="@+id/header_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/task_details"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
            <TextView
                android:id="@+id/task_desc"
                android:layout_width="match_parent"
                android:layout_below="@+id/task_name"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:lines="4"
                android:ellipsize="end"
                android:textColor="@color/colorPrimaryDark"
                />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/header_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/header_layout3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/task_users"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/header_layout5"
                android:layout_below="@+id/header_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="dsds"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_toLeftOf="@+id/textView"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/layout3"
            android:layout_alignParentBottom="true"
            android:id="@+id/layout_assignee"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/taskdate"
                    android:layout_width="wrap_content"
                    android:text="23%"
                    android:padding="5dp"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorAccent"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/percentage"
                android:layout_width="wrap_content"
                android:text="100%"
                android:padding="5dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <com.algorepublic.zoho.circularseekbar.CircularSeekBar
                android:id="@+id/arc_progress"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@+id/layout4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:start_angle="270"
                app:end_angle="270"
                app:circle_x_radius="100dp"
                app:circle_y_radius="100dp"
                app:use_custom_radii="true"
                app:progress="45"
                app:max="100"
                app:circle_progress_color="@color/colorAccent"
                app:circle_color="@color/colorDarkgray"
                app:pointer_alpha_ontouch="100"
                app:pointer_color="@color/colorAccent"
                app:pointer_halo_color="@color/colorAccent"/>
        </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/parent2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="4"
        android:padding="5dp"
        android:background="@drawable/topborder"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:src="@drawable/ic_comment"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/alarm"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:src="@drawable/ic_alarm_24dp"
            android:layout_gravity="center"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/mark_as_done"
            android:layout_width="0dp"
            android:text="Mark as done"
            android:padding="2dp"
            android:gravity="center"
            android:layout_weight="1.6"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
</RelativeLayout>
