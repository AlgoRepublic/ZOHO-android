<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/forum_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBaseHeader"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_toLeftOf="@+id/layout_comment"
            android:layout_centerVertical="true"
            android:text="@string/forums_title"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/layout_comment"
            android:layout_width="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/notify_alert1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="112"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="7dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/bubble_alert_black"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorBaseHeader" />

            <ImageView
                android:id="@+id/delete1"
                android:layout_width="20dp"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/forums"
                android:layout_height="20dp" />
        </RelativeLayout>


    </RelativeLayout>
    <TextView
        android:id="@+id/forum_discription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBaseMenu"
        android:textSize="14sp"
        android:layout_below="@+id/layout1"
        android:paddingLeft="10dp"
        android:text="@string/forums_description"
        />
</RelativeLayout>