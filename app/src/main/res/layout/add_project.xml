<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBaseWrapper">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/project_name"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/project_description"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"
        app:met_floatingLabel="normal"
        app:met_primaryColor="@color/colorBaseHeader"/>

    <org.angmarch.views.NiceSpinner
        android:id="@+id/owner_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBaseHeader"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/project_desc"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/project_description"
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/colorBaseHeader"/>

        <org.angmarch.views.NiceSpinner
            android:id="@+id/departments_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBaseHeader"
            android:textSize="18sp"
            android:layout_marginTop="20dp" />

        <RadioGroup
            android:id="@+id/active_archive_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="20dp">

            <RadioButton
                android:id="@+id/active_radio"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/_active"
                android:button="@null"
                android:drawableLeft="@drawable/radiobutton"
                android:drawablePadding="5dp"
                android:textColor="@color/colorBaseHeader"/>
            <RadioButton
                android:id="@+id/archive_radio"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/_archive"
                android:button="@null"
                android:drawableLeft="@drawable/radiobutton"
                android:drawablePadding="5dp"
                android:textColor="@color/colorBaseHeader"/>
        </RadioGroup>

        <RadioGroup android:id="@+id/private_public_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/private_radio"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/_private"
                android:button="@null"
                android:drawableLeft="@drawable/radiobutton"
                android:drawablePadding="5dp"
                android:textColor="@color/colorBaseHeader"/>
            <RadioButton
                android:id="@+id/public_radio"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/_public"

                android:button="@null"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/radiobutton"
                android:textColor="@color/colorBaseHeader"/>
        </RadioGroup>
    </LinearLayout>
</ScrollView>