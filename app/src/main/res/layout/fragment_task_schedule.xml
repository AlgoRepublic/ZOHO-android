<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".FragmentsTasks.TaskScheduleFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="5dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_start_date"
            android:orientation="horizontal"
            >

        <ImageView
            android:id="@+id/start_date_image"
            android:layout_width="15dp"
            android:text="@string/start_date"
            android:textAllCaps="false"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp"

            />
            <TextView
                android:id="@+id/text1"
                android:layout_toRightOf="@+id/start_date_image"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/colorContentWrapper"
                android:textSize="10sp"
                android:typeface="monospace" />
            <TextView
                android:id="@+id/start_date"
                android:layout_toRightOf="@+id/text1"
                android:layout_width="wrap_content"
                android:text="@string/start_date"
                android:textSize="10sp"
                android:padding="2dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_border"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_end_date"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_toLeftOf="@+id/text2"
                android:id="@+id/end_date_image"
                android:layout_width="15dp"
                android:text="@string/start_date"
                android:textAllCaps="false"
                android:layout_gravity="center_vertical"
                android:layout_height="20dp"

                />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:gravity="center"
                android:layout_toLeftOf="@+id/end_date"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/colorContentWrapper"
                android:textSize="10dp"
                android:typeface="monospace" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/end_date"
                android:layout_width="wrap_content"
                android:text="@string/end_date"
                android:textSize="10sp"
                android:padding="2dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_border"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>
    </LinearLayout>


</FrameLayout>
