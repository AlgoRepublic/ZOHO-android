<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="5dp"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/file_image"
        android:layout_width="45dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="match_parent"
        android:layout_margin="10dp" >
    </ImageView>
    <RelativeLayout
        android:id="@+id/layout_tasktitle"
        android:layout_toLeftOf="@+id/owner_image"
        android:layout_alignTop="@+id/file_image"
        android:layout_alignBottom="@+id/file_image"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/file_image" >
        <TextView
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="File"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/file_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="4:00 PM"
            android:layout_below="@id/file_name"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/file_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text=" - "
            android:layout_below="@id/file_name"
            android:layout_toRightOf="@+id/file_time"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="18K"
            android:layout_below="@id/file_name"
            android:layout_toRightOf="@+id/file_tag"
            android:textColor="@android:color/black"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/owner_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY"
        android:background="@drawable/nav_user"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"
        />
    <View
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDarkgray"
        android:layout_height="1dp"/>
</RelativeLayout>