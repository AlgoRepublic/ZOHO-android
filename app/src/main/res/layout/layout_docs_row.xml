<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <ImageView
        android:id="@+id/file_image"
        android:layout_width="45dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_toLeftOf="@+id/layout1"
        android:layout_height="50dp"
        android:background="@mipmap/ic_listview_word"
        android:layout_margin="10dp" >
    </ImageView>
    <RelativeLayout
        android:id="@+id/layout_2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_height="25dp"
        android:layout_width="25dp" >
        <CheckBox
            android:id="@+id/doc_checkbox"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/checkbox"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_tasktitle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/layout_2"
        android:layout_toRightOf="@+id/file_image"
       >
        <TextView
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="File"
            android:singleLine="true"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/black"
            />
    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/file_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >
        <TextView
            android:id="@+id/file_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="4:00 PM"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/file_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=" - "
            android:layout_toRightOf="@+id/file_time"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="18K"
            android:layout_toRightOf="@+id/file_tag"
            android:textColor="@android:color/black"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/file_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
</RelativeLayout>