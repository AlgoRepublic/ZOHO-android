<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:background="@color/colorBaseWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/image_comment"
            android:id="@+id/comment_image" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Forum 1"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorBaseHeader"
            android:textSize="14sp"
            android:id="@+id/forum_title"
            android:layout_alignTop="@+id/comment_image"
            android:layout_toEndOf="@+id/comment_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forum_description"
            android:textSize="14sp"
            android:lines="2"
            android:text="daadadad"
            android:textColor="@color/colorBaseHeader"
            android:layout_below="@+id/comment_image"
            android:layout_alignStart="@+id/forum_title" />
</RelativeLayout>
    </RelativeLayout>