<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBaseWrapper"
    android:gravity="top"
    android:orientation="vertical">
    <View
        android:id="@id/view"
        android:layout_width="match_parent"
        android:background="@color/colorBaseHeader"
        android:layout_height="24dp"/>

    <RelativeLayout
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBaseHeader">
       <RelativeLayout
        android:id="@+id/layout_menu1"
        android:layout_width="44dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/notify_alert"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="112"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="8sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/bubble_alert_white"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorBaseWrapper" />
        <ImageView
            android:id="@+id/notification"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/notification" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/settings"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/layout_menu1"
            android:layout_toStartOf="@+id/layout_menu1"
            android:src="@drawable/settings" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <RelativeLayout
                    android:id="@+id/parent_child2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark">
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:gravity="right"
                        android:padding="5dp"
                        android:lines="2"
                        android:textSize="18dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorBaseHeader"
                        android:layout_toLeftOf="@+id/profile"
                        android:layout_toStartOf="@+id/profile" />
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/profile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        app:shadow="true"
                        app:border="true"
                        app:border_width="4dp"
                        app:border_color="@color/colorContentWrapper"
                        app:shadow_radius="3"
                        app:shadow_color="@color/colorBaseMenu"
                        android:src="@drawable/nav_user" />
                    <TextView
                        android:text="admin"
                        android:lines="2"
                        android:textSize="18sp"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/profile"
                        android:layout_toEndOf="@id/profile"
                        android:textColor="@color/colorBaseHeader"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/parent_child3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@id/parent_child2">
                    <TextView
                        android:id="@+id/email"
                        android:text="admin@admin.com"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorBaseHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>

            <GridView
                android:id="@+id/gridview_menu"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:numColumns="3"
                android:padding="10dp"
                android:gravity="center"
                android:stretchMode="columnWidth"
                android:orientation="vertical">
            </GridView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
