<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.algorepublic.zoho.fragments.ProjectsFragment">
    <RelativeLayout
        android:id="@+id/layout_spinner"
        android:layout_below="@+id/include"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="30dp">
        <RelativeLayout
            android:layout_below="@+id/include"
            android:layout_width="120dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@color/colorBaseHeader"
            android:layout_alignParentRight="true"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/dropdown"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:background="@color/colorBaseWrapper"
                android:adjustViewBounds="true"
                android:layout_alignTop="@+id/title_name" />
            <ImageView
                android:id="@+id/dropdown"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:background="@mipmap/circle_down"
                android:adjustViewBounds="true"
                android:layout_alignTop="@+id/title_name" />
            </RelativeLayout>
        <Spinner
            android:id="@+id/spinner_sort"
            android:layout_width="90dp"
            android:layout_marginRight="30dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:background="@null"
            android:visibility="visible"
            android:spinnerMode="dropdown"
            android:gravity="left"
            android:layout_gravity="left" />
    </RelativeLayout>
    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:layout_below="@+id/layout_spinner"
        android:id="@+id/projects_liststicky"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:scrollbars="none"
        android:visibility="gone"
        android:descendantFocusability="beforeDescendants"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent" />
    <ListView
        android:layout_below="@+id/layout_spinner"
        android:id="@+id/projects_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:scrollbars="none"
        android:descendantFocusability="beforeDescendants"
        android:choiceMode="singleChoice"
        android:divider="@null" />
</RelativeLayout>
