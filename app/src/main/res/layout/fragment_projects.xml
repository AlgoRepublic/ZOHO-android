<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.algorepublic.zoho.fragments.ProjectsFragment">

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:layout_above="@+id/layout_bottom"
        android:id="@+id/projects_liststicky"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:scrollbars="none"
        android:visibility="gone"
        android:dividerHeight="5dp"
        android:descendantFocusability="beforeDescendants"
        android:listSelector="#666666"
        android:background="@drawable/list_selected_bg"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent" />
    <ListView
        android:layout_above="@+id/layout_bottom"
        android:id="@+id/projects_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:scrollbars="none"
        android:descendantFocusability="beforeDescendants"
        android:choiceMode="singleChoice"
        android:listSelector="#666666"
        android:dividerHeight="5dp"
        android:divider="@android:color/transparent" />
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:weightSum="4"
        android:background="@color/colorContentWrapper"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/view"
            android:weightSum="3"
            android:layout_weight="3.7"
            android:orientation="horizontal"
            android:id="@+id/radioGroup">

        </RadioGroup>
        <View android:layout_height="fill_parent"
            android:layout_width="2dp"
            android:background="@color/white"/>
        <RelativeLayout
            android:id="@+id/sort"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"
            android:layout_height="match_parent">
            <Button
                android:layout_width="45dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@mipmap/task_image"
                android:layout_gravity="center"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
