<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBaseWrapper"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/nav_user"
            app:border="true"
            android:layout_margin="20dp"
            app:border_color="@color/colorContentWrapper"
            app:border_width="4dp"
            app:shadow="true"
            app:shadow_color="@color/colorBaseMenu"
            app:shadow_radius="3" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/first_name"
            android:layout_below="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="@string/first_name"
            android:textSize="18sp"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/colorBaseHeader"
            app:met_singleLineEllipsis="true" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/last_name"
            android:layout_below="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/last_name"
            android:inputType="textMultiLine"
            android:textSize="18sp"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/colorBaseHeader" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/user_email"
            android:layout_below="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/email"
            android:inputType="textMultiLine"
            android:textSize="18sp"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/colorBaseHeader" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/user_phoneno"
            android:layout_below="@id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:textSize="18sp"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/colorBaseHeader" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/project_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/user_phoneno"
            android:hint="@string/user_role"
            android:inputType="textMultiLine"
            android:textSize="18sp"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/colorBaseHeader" />
</RelativeLayout>
        </android.support.v7.widget.CardView>
</ScrollView>