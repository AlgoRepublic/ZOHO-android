<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/layout_preview"
        android:layout_weight="1.5"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="0dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/layout1"
            android:layout_height="wrap_content">
            <com.mikhaellopez.circularimageview.CircularImageView
                app:civ_border="true"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/colorBaseMenu"
                app:civ_shadow_radius="3"
                android:id="@+id/user_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorBaseHeader"
                android:layout_centerVertical="true"
                android:src="@drawable/nav_user" />
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="16sp"
                android:text="sd"
                android:layout_toRightOf="@+id/user_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>
        <View
            android:id="@+id/view"
            android:layout_below="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorBaseMenu"/>
        <ImageView
            android:id="@+id/doc_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@drawable/square_border"
            android:layout_below="@+id/view"
            android:layout_above="@+id/layout_tasktitle"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:id="@+id/layout_tasktitle"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/doc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="18sp"
                android:text="sd"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/doc_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_below="@+id/doc_title"
                android:ellipsize="end"
                android:textSize="14sp"
                android:text="sd"
                android:layout_gravity="center_vertical" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>