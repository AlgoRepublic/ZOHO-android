<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
        android:id="@+id/shadow_item_container"
        android:layout_width="wrap_content"
        style="@style/ms9_DefaultShadowStyle"
        android:layout_height="wrap_content"
        app:ms9_useAmbientShadow="true"
        app:ms9_affectsDisplayedPosition="true"
        app:ms9_shadowTranslationZ="1dp"
        app:ms9_shadowElevation="2dp">
        <RelativeLayout
            android:padding="5dp"
            android:background="@color/white"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorBaseHeader"
                android:src="@drawable/nav_user"
                android:id="@+id/comment_image" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test_forum"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorBaseHeader"
                android:textSize="14sp"
                android:id="@+id/forum_title"
                android:layout_alignTop="@+id/comment_image"
                android:layout_toEndOf="@+id/comment_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/forum_description"
                android:textSize="14sp"
                android:lines="2"
                android:text="@string/test_forum"
                android:textColor="@color/colorBaseHeader"
                android:layout_below="@+id/comment_image"
                android:layout_alignStart="@+id/forum_title" />
        </RelativeLayout>
    </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>
</RelativeLayout>