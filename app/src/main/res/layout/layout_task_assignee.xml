<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="2dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        app:civ_border="true"
        app:civ_border_color="@color/colorContentWrapper"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/colorBaseMenu"
        app:civ_shadow_radius="3"
        android:id="@+id/assignee_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/nav_user"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:civ_border_width="0dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NT"
        android:layout_below="@+id/assignee_image"
        android:id="@+id/user_name"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="@color/colorBaseHeader"
        android:textColorHint="@color/colorBaseMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
       />
</RelativeLayout>