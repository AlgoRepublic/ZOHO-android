<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout1"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView
        android:id="@+id/shadow_item_container"
        android:layout_width="match_parent"
        style="@style/ms9_DefaultShadowStyle"
        android:layout_height="wrap_content"
        app:ms9_useAmbientShadow="true"
        app:ms9_affectsDisplayedPosition="true"
        app:ms9_shadowTranslationZ="1dp"
        app:ms9_shadowElevation="3dp">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorContentWrapper"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/lblListHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/new_forum_post"
                android:gravity="center"
                android:textColor="@color/white" />
        </RelativeLayout>
    </com.h6ah4i.android.materialshadowninepatch.MaterialShadowContainerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/layout2"
        android:layout_below="@+id/shadow_item_container"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/forum_title"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="@string/title"
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"
            app:met_floatingLabel="normal"
            android:textColor="@color/colorBaseHeader"
            app:met_primaryColor="@color/colorBaseHeader"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/layout2"
        android:id="@+id/layout3"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:padding="5dp"
            android:textColor="@color/colorBaseHeader"
            android:id="@+id/category"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <org.angmarch.views.NiceSpinner
            android:id="@+id/forum_list"
            android:layout_width="match_parent"
            android:layout_below="@+id/category"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBaseHeader"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/layout3"
        android:layout_margin="10dp"
        >
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/forum_description"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/content"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBaseHeader"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/colorBaseHeader"/>

    </RelativeLayout>
</RelativeLayout>
