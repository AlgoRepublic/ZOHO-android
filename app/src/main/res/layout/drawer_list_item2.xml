<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <View
            android:layout_below="@+id/layout"
            android:id="@+id/view"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/colorBaseHeader"/>
            <TextView
                android:id="@+id/quest_text"
                android:layout_below="@+id/quests_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lines="2"
                android:textSize="14sp"
                android:ellipsize="end"
                android:text="Questions:"
                android:textStyle="bold"
                android:textColor="@color/colorBaseHeader" />
            <TextView
                android:id="@+id/comment_text"
                android:layout_below="@+id/quest_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="Comments:"
                android:textStyle="bold"
                android:textColor="@color/colorBaseHeader" />
            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_alignTop="@+id/comment_text"
                android:layout_toRightOf="@+id/comment_text"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/comment_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:text="Comments:\n wdwdw\nwdww"
                    android:lines="3"
                    android:editable="false"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBaseHeader" />
                <ImageView
                    android:src="@mipmap/edit"
                    android:id="@+id/comment_edit"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="3dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_below="@+id/layout1"
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Comments:"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBaseHeader" />
                <SeekBar
                    style="@style/tallerBarStyle"
                    android:id="@+id/seekBar"
                    android:layout_toRightOf="@+id/rating_text"
                    android:layout_toLeftOf="@+id/percent_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:thumb="@drawable/thumb_image"
                    android:thumbTint="@color/colorBaseHeader"
                    android:progressTint="@color/colorBaseHeader"
                    android:foreground="@color/colorBaseHeader"
                    android:max="100" >
                </SeekBar>
                <TextView
                    android:id="@+id/percent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBaseHeader" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/layout2"
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/stage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Comments:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorBaseHeader" />
                <TextView
                    android:id="@+id/devstage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Development Stage"
                    android:padding="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/stage_text"
                    android:textSize="10sp"
                    android:textColor="@color/colorContentWrapper" />

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/star_rating"
                    android:numStars="5"
                    android:max="100"
                    android:stepSize="0.1"
                    android:progressBackgroundTint="@color/colorContentWrapper"
                    android:progressTint="@color/colorBaseHeader"
                    android:secondaryProgressTint="@color/colorBaseHeader"
                    android:isIndicator="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>